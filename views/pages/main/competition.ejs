<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../../partials/shared/head %> <% include
    ../../partials/shared/styles %>
    <link href="/css/main/competition.css" rel="stylesheet" />
  </head>

  <body>
    <% include ../../partials/components/header %>

    <div class="competition-container container body-section">
      <h1 class="text-center">Competition</h1>

      <div class="row">
        <div class="col">
          <h3 class="text-center">Dead Lift | 5 Reps</h3>
          <ul class="list-group">
            <li class="list-group-item">
              John Smith <span class="badge badge-secondary">9</span>
            </li>
            <li class="list-group-item">
              Lukas Orana <span class="badge badge-secondary">9</span>
            </li>
            <li class="list-group-item">
              Devon Lad <span class="badge badge-secondary">9</span>
            </li>
            <li class="list-group-item">
              Jonah Bates <span class="badge badge-secondary">9</span>
            </li>
            <li class="list-group-item">
              Ali Batayneh <span class="badge badge-secondary">9</span>
            </li>
          </ul>
        </div>
        <div class="col">
          <h3 class="text-center">Current High Scores</h3>
          <ul class="list-group">
            <li class="list-group-item">Squads | Ali Batayneh</li>
            <li class="list-group-item">Dead Lift | John Smith</li>
            <li class="list-group-item">Bench Press | Devon Lad</li>
            <li class="list-group-item">Incline Curl | John Smith</li>
            <li class="list-group-item">Leg Press | Jonah Bates</li>
          </ul>
        </div>
        <div class="col">
          <h3 class="text-center">New Workout</h3>
          <ul class="exercises-container list-group">
            <div class="form-group">
              <i class="icon control-feedback fas fa-search"></i>
              <input type="text" placeholder="Search" class="form-control" />
            </div>
            <% for(var i = 0; i < exercises.length; i++) { %>
            <li
              onclick="selectExercise('<%= exercises[i].id %>')"
              id="<%= exercises[i].id %>"
              class="list-group-item"
            >
              <%= exercises[i].name %> <% if(i === 0) { %>
              <i class="fas fa-check"></i>
            </li>
            <%}%> <% } %>
          </ul>
          <div class="rep-input-container form-group">
            <input
              class="form-control"
              type="text"
              placeholder="Enter your reps..."
            />
            <button class="btn btn-success">Submit</button>
          </div>
        </div>
      </div>

      <% include ../../partials/components/footer %>
    </div>

    <% include ../../partials/shared/scripts %>
    <script src="./js/competition.js"></script>
  </body>
</html>
