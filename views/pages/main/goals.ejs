<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../../partials/shared/head %> <% include
    ../../partials/shared/styles %>
    <link href="/css/main/goals.css" rel="stylesheet" />
  </head>

  <body>
    <% include ../../partials/components/header %>

    <div class="container body-section goals-container">
      <h1 class="text-center">Goals</h1>
      <ul id="goal-list" class="list-group">
        <% for(var i = 0; i < goals.length; i++) { %>
        <div id="<%= goals[i].id %>" class="row align-items-center">
          <button
            onclick="deleteGoal('<%= goals[i].id %>')"
            class="col-1 btn btn-danger"
          >
            Delete
          </button>
          <li class="col list-group-item"><%= goals[i].title %></li>
          <div class="col-2 form-check">
            <% if (goals[i].done) { %>
            <input
              onchange="updateGoal('<%= goals[i].id %>')"
              class="form-check-input"
              type="checkbox"
              checked
            />
            <label class="form-check-label" for="defaultCheck1"> Done </label>
            <% } else { %>
            <input
              onchange="updateGoal('<%= goals[i].id %>')"
              class="form-check-input"
              type="checkbox"
            />
            <label class="form-check-label" for="defaultCheck1">
              Not Done
            </label>
            <% } %>
          </div>
        </div>
        <% } %>
      </ul>

      <div class="row">
        <div class="col form-group">
          <input
            type="text"
            id="new-goal-input"
            class="form-control"
            placeholder="Add Goal"
          />
        </div>
        <button id="add-goal-button" class="col-1 btn btn-info">Add</button>
      </div>

      <% include ../../partials/components/footer %>
    </div>
  </body>

  <% include ../../partials/shared/scripts %>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <script src="./js/goals.js"></script>
</html>
