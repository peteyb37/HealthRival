<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../../partials/shared/head %> <% include
    ../../partials/shared/styles %>
    <link href="/css/user/user.css" rel="stylesheet" />
  </head>

  <body>
    <% include ../../partials/components/header %>

    <div class="container body-section">
      <h1 class="text-center">User Profile</h1>

      <div class="user-items row justify-content-center">
        <div class="col-sm-8">
          <div class="row">
            <label class="col-sm-2 col-form-label" for="inputEmail"
              >Avatar</label
            >
            <div class="col">
              <input
                name="avatar"
                type="file"
                class="form-control-file"
                accept="image/*"
                value="test.jpg"
              />
            </div>
          </div>

          <div class="row">
            <label class="col-sm-2 col-form-label" for="inputEmail"
              >First Name</label
            >
            <div class="col">
              <input
                name="firstName"
                type="text"
                class="form-control"
                value="<%= user.firstName %>"
              />
            </div>
          </div>

          <div class="row">
            <label class="col-sm-2 col-form-label" for="inputEmail"
              >Last Name</label
            >
            <div class="col">
              <input
                name="lastName"
                type="text"
                class="form-control"
                value="<%= user.lastName %>"
              />
            </div>
          </div>

          <div class="row">
            <label class="col-sm-2 col-form-label" for="inputEmail">City</label>
            <div class="col">
              <input
                name="city"
                type="text"
                class="form-control"
                value="<%= user.city %>"
              />
            </div>
          </div>

          <div class="row">
            <label class="col-sm-2 col-form-label" for="inputEmail"
              >State</label
            >
            <div class="col">
              <input
                name="state"
                type="text"
                class="form-control"
                value="<%= user.state %>"
              />
            </div>
          </div>

          <div class="row">
            <label for="gender" class="col-sm-2 col-form-label">Gender</label>
            <div class="col">
              <select class="form-control" id="gender">
                <option value="unspecified">Unspecified</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
              </select>
            </div>
          </div>

          <div class="row justify-content-center">
            <button disabled type="submit" class="btn btn-primary">
              Update
            </button>
          </div>
        </div>
      </div>

      <% include ../../partials/components/footer %>
    </div>

    <% include ../../partials/shared/scripts %>
  </body>
</html>
